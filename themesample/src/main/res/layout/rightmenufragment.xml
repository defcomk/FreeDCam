                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/setting_camera_"
                android:id="@+id/legcset"
                android:textColor="#ffffff"
                android:background="@color/uiSettingsBackground"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemAntiBanding"
                app:Description="@string/setting_antiflicker_description"
                app:HeaderText="@string/setting_antiflicker_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemColor"
                app:Description="@string/setting_color_description"
                app:HeaderText="@string/setting_color_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemScene"
                app:Description="@string/setting_scene_description"
                app:HeaderText="@string/setting_scene_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemCorrelatedDoubleSampling"
                app:Description="@string/setting_cds_description"
                app:HeaderText="@string/setting_cds_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemDigitalImageStab"
                app:Description="@string/setting_dis_description"
                app:HeaderText="@string/setting_dis_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemOIS"
                app:Description="@string/setting_ois_description"
                app:HeaderText="@string/setting_ois_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MenuItemLensShade"
            app:Description="@string/setting_lensshade_description"
            app:HeaderText="@string/setting_lensshade_header"
            app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MenuItemChromaFlash"
            app:Description="@string/setting_chromaflash.description"
