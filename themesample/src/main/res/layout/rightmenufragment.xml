            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemWaveletDenoise"
                app:Description="@string/setting_waveletdenoise_description"
                app:HeaderText="@string/setting_waveletdenoise_header"
                app:ValueText="Test"

                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemZSL"
                app:Description="@string/setting_zsl_description"
                app:HeaderText="@string/setting_zsl_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemCCTMode"
                app:Description="Change this for manual or auto set"
                app:HeaderText="ColorCorrectionMode: "
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
