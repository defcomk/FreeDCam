                app:HeaderText="@string/setting_objecttrack_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemPostViewSize"
                app:Description="@string/setting_postview_description"
                app:HeaderText="@string/setting_postview_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemIpp"
                app:Description="@string/setting_ipp_description"
                app:HeaderText="@string/setting_ipp_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemNonManualZSL"
                app:Description="@string/setting_nonzsl_description"
                app:HeaderText="@string/setting_nonzsl_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
